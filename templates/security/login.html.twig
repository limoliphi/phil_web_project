{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h1 class="mt-5 mb-3 text-center">Ouvrir une session</h1>
                <p class="mb-5 text-center text-muted">Administration du site internet</p>
                <form method="post">
                    {% if error %}
                        <div class="mb-3 alert alert-error rounded"
                             role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control"
                               required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de pass</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                    </div>

                    <div class="d-flex justify-content-between">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                                <label class="form-check-label" for="remember_me">
                                    Se souvenir de moi
                                </label>
                            </div>
                        </div>

                        <a href="#">Mot de pass oublié</a>

                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-lg btn-block btn-primary" type="submit">
                        Ouvrir une session
                    </button>

                    <p class="mt-5 mb-3 text-center text-muted">Pas encore enregistré ?<a href="#"> Créer un compte</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

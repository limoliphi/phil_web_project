<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg8 text-center">
            <h1>Mes dernières réalisations</h1>
        </div>
    </div>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {% for oeuvre in oeuvres %}
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="welcome-image w-100" src="{{ oeuvre.file }}" alt="Oeuvre de l'artiste">

                        <div class="card-body">
                            <p>{{ oeuvre.nom }}</p>
                            <p class="card-text">{{ oeuvre.description|u.truncate(120, '...', false) }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                </div>
                                <small class="text-muted">Ajoutée le {{ oeuvre.createdAt|date('d/m/Y') }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>